<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Materi.PemeriksaanDiagActivity">
    <TextView
        android:padding="10dp"
        android:fontFamily="@font/roboto"
        android:layout_margin="10dp"
        android:background="@drawable/side_more"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pemeriksaan Diagnosis"
        android:textSize="32sp"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginBottom="@dimen/activity_margin"
                android:paddingLeft="@dimen/activity_margin"
                android:paddingRight="@dimen/activity_margin"
                android:text="Pemeriksaan laboratorium merupakan penunjang diagnostik pokok dalam diagnosis anemia. Pemeriksaan ini terdiri dari :"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/diag1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView

                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:id="@+id/tv_diag1"
                    style="@style/subtitle"
                    android:background="@drawable/side_two"
                    android:drawableLeft="@drawable/bawah"
                    android:fontFamily="@font/roboto"
                    android:text="  Pemeriksaan penyaring  "
                    android:textSize="14sp" />

                <LinearLayout style="@style/subIsi">

                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pemeriksaan penyaring untuk kasus anemia terdiri dari pengukuran kadar hemoglobin, indeks eritrosit dan hapusan darah tepi. Dari ini dapat dipastikan adanya anemia serta jenis morfologik anemia tersebut, yang sangat berguna untuk pengarahan diagnosis lebih lanjut"
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diag2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:id="@+id/tv_diag2"
                    style="@style/subtitle"
                    android:background="@drawable/side_two"
                    android:drawableLeft="@drawable/bawah"
                    android:fontFamily="@font/roboto"
                    android:text="  Pemeriksaan darah seri anemia "
                    android:textSize="14sp" />

                <LinearLayout style="@style/subIsi">

                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pemeriksaan darah seri anemia meliputi hitung leukosit, trombosit, hitung retikulosit dan laju endap darah. Sekarang sudah banyak dipakai automatic hematology analyzer yang dapat memberikan presisi hasil yang lebih baik."
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diag3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:id="@+id/tv_diag3"
                    style="@style/subtitle"
                    android:background="@drawable/side_two"
                    android:drawableLeft="@drawable/bawah"
                    android:fontFamily="@font/roboto"
                    android:text="  Pemeriksaan sumsum tulang "
                    android:textSize="14sp" />

                <LinearLayout style="@style/subIsi">

                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pemeriksaan sumsum tulang memberikan informasi yang sangat berharga mengenai keadaan sistem hematopoesis. Pemeriksaan ini dibutuhkan untuk diagnosis definitif pada beberapa jenis anemia. Pemeriksaan sumsum tulang mutlak diperlukan untuk diagnosis anemia aplastik, anemia megaloblastik, serta pada kelainan hematologik yang dapat mensupresi sistem eritroid."
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/diag4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:id="@+id/tv_diag4"
                    style="@style/subtitle"
                    android:background="@drawable/side_two"
                    android:drawableLeft="@drawable/bawah"
                    android:fontFamily="@font/roboto"
                    android:text="  Pemeriksaan khusus  "
                    android:textSize="14sp" />

                <LinearLayout style="@style/subIsi">

                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Pemeriksaan ini hanya dikerjakan bawah indikasi khusus, misalnya pada: "
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="a. Anemia defisiensi besi : serum iron. TIBC (total iron binding capacity), saturasi transferin, protoporfirin eritrosit, feritin serum, reseptor transferin dan pengecatan besi pada sumsum tulang (Perlâ€™s stain)."
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="b. Anemia megaloblastik : folat serum, vitamin B12 serum, tes supresi deoksiuridin dan tes Schiling."
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.codesgood.views.JustifiedTextView
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="c. Anemia hemolitik : bilirubin serum, tes Coomb, elektroforesis hemoglobin dan lain-lain."
                        android:textSize="14sp">
                    </com.codesgood.views.JustifiedTextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>